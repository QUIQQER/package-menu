                <setting name="contentImgMinWidth" type="number">
                    <locale group="quiqqer/menu"
                            var="control.tabs.contentImgMinWidth"/>

                    <description>
                        <locale group="quiqqer/menu"
                                var="control.tabs.contentImgMinWidth.desc"/>
                    </description>
                </setting>
                <setting name="contentImgMaxWidth" type="number">
                    <locale group="quiqqer/menu"
                            var="control.tabs.contentImgMaxWidth"/>

                    <description>
                        <locale group="quiqqer/menu"
                                var="control.tabs.contentImgMaxWidth.desc"/>
                    </description>
                </setting>
                <!-- content: text width -->
                <setting name="contentTextWidth" type="number">
                    <locale group="quiqqer/menu"
                            var="control.tabs.contentTextWidth"/>

                    <description>
                        <locale group="quiqqer/menu"
                                var="control.tabs.contentTextWidth.desc"/>
                    </description>
                </setting>

                <setting name="entries" type="hidden" data-qui="package/quiqqer/menu/bin/Controls/Tabs.Settings">
                    <locale group="quiqqer/menu" var="control.tabs.entries"/>
                </setting>

            </settings>
        </brick>

