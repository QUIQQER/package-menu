                            var="menu.control.urlList.setting.resetLinkColor"/>
                    <description>
                        <locale group="quiqqer/menu"
                                var="menu.control.urlList.setting.resetLinkColor.desc"/>
                    </description>
                </setting>

            </settings>
        </brick>

        <!-- one page nav -->
