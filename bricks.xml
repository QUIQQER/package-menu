<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Nav (QUI) -->
        <brick control="\QUI\Menu\SidebarDropDownMenu">
            <title>
                <locale group="quiqqer/menu" var="menu.control.navigation.title"/>
            </title>
            <description>
                <locale group="quiqqer/menu" var="menu.control.navigation.description"/>
            </description>

            <settings>
                <setting name="display" type="select">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.display" />

                    <option value="simple">
                        <locale group="quiqqer/menu"
                                var="menu.control.navigation.setting.display.simple" />
                    </option>
                    <option value="advanced">
                        <locale group="quiqqer/menu"
                                var="menu.control.navigation.setting.display.advanced" />
                    </option>
                </setting>
                <setting name="startId" class="project-site">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.startId"/>
                </setting>
                <setting name="parentLink" type="checkbox">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.parentLink"/>
                </setting>
                <setting name="levels" type="number">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.levels"/>
                </setting>
                <setting name="onlyFirstLevelIcons" type="checkbox">
                    <locale group="quiqqer/menu"
                            var="menu.control.navigation.setting.onlyFirstLevelIcons"/>
                </setting>

                <setting name="listType" type="select">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.listType" />

                    <option value="fontAwesome">
                        <locale group="quiqqer/menu"
                                var="menu.control.navigation.setting.listType.fontAwesome" />
                    </option>
                    <option value="sitePicture">
                        <locale group="quiqqer/menu"
                                var="menu.control.navigation.setting.listType.sitePicture" />
                    </option>
                    <option value="none">
                        <locale group="quiqqer/menu"
                                var="menu.control.navigation.setting.listType.none" />
                    </option>
                </setting>
                <setting name="parentIcon" type="text">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.parentIcon"/>
                </setting>

                <setting name="listIcon" type="text">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.listIcon"/>
                </setting>
                <setting name="levelIcon" type="text">
                    <locale group="quiqqer/menu" var="menu.control.navigation.setting.levelIcon"/>
                </setting>
            </settings>
        </brick>

    </bricks>
</quiqqer>